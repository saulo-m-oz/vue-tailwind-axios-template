{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@services/*": ["services/*"],
      "@views/*": ["views/*"],
      "@state/*": ["state/*"],
      "@stores/*": ["stores/*"],
      "@interfaces/*": ["interfaces/*"],
      "@config/*": ["config/*"],
      "@router/*": ["router/*"],
      "@src/*": ["./*"]
    }
  }
}
